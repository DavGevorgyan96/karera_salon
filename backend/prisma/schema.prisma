generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  ADMIN
  MANAGER
  MASTER
}

enum AppointmentStatus {
  NEW
  CONFIRMED
  DONE
  CANCELED
}

enum ReviewStatus {
  PENDING
  APPROVED
  HIDDEN
}

model User {
  id           String   @id @default(uuid())
  name         String
  email        String   @unique
  phone        String?
  passwordHash String
  role         Role     @default(MASTER)
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
}

model Staff {
  id             String         @id @default(uuid())
  name           String
  avatarUrl      String?
  specializationId String?
  specialization Specialization? @relation(fields: [specializationId], references: [id])
  description    String?
  rating         Decimal        @default(5.0) @db.Decimal(2, 1)
  isActive       Boolean        @default(true)
  createdAt      DateTime       @default(now())
  updatedAt      DateTime       @updatedAt
  services       StaffService[]
  appointments   Appointment[]
  reviews        Review[]
  blockedTimes   BlockedTime[]
}

model Specialization {
  id    String  @id @default(uuid())
  name  String  @unique
  staff Staff[]
}

model Service {
  id              String         @id @default(uuid())
  name            String
  category        String
  price           Decimal        @db.Decimal(10, 2)
  durationMinutes Int
  description     String?
  isActive        Boolean        @default(true)
  createdAt       DateTime       @default(now())
  updatedAt       DateTime       @updatedAt
  staff           StaffService[]
  appointments    Appointment[]
}

model StaffService {
  id        String  @id @default(uuid())
  staffId   String
  serviceId String
  staff     Staff   @relation(fields: [staffId], references: [id])
  service   Service @relation(fields: [serviceId], references: [id])

  @@unique([staffId, serviceId])
}

model Appointment {
  id                String            @id @default(uuid())
  clientName        String
  clientPhone       String
  serviceId         String
  staffId           String?
  date              DateTime          @db.Date
  timeFrom          DateTime          @db.Time
  timeTo            DateTime          @db.Time
  status            AppointmentStatus @default(NEW)
  commentFromClient String?
  createdAt         DateTime          @default(now())
  updatedAt         DateTime          @updatedAt

  service Service @relation(fields: [serviceId], references: [id])
  staff   Staff?  @relation(fields: [staffId], references: [id])
}

model Review {
  id         String       @id @default(uuid())
  clientName String
  rating     Int
  text       String
  staffId    String?
  status     ReviewStatus @default(PENDING)
  createdAt  DateTime     @default(now())

  staff Staff? @relation(fields: [staffId], references: [id])
}

model Setting {
  id              String   @id @default(uuid())
  workHoursJson   Json
  contactPhone    String
  contactAddress  String
  contactTelegram String?
  contactWhatsApp String?
  categories      String[] @default([])
  heroTitle       String?
  heroSubtitle    String?
}

model BlockedTime {
  id        String   @id @default(uuid())
  date      DateTime @db.Date
  timeFrom  DateTime? @db.Time
  timeTo    DateTime? @db.Time
  reason    String?
  staffId   String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  staff     Staff?   @relation(fields: [staffId], references: [id])
}
